articlemix(tipo)
    margin 1rem
    height 7rem
    width 7rem
    border-radius 7rem
    display flex
    justify-content center
    align-items center
    box-shadow 0px 0px 10px 2px tipo    
    > p
        display none
    &:hover
        > p
            display block
imgmix(urlpic)
    background-color white
    background-image url(urlpic)
    background-repeat no-repeat
    background-size contain
    background-position center
    &:hover
        background white
    
html
    height 100%
.header
    display flex
    justify-content center
    h1
        margin 0
.main
    display flex
    flex-direction column
    align-items  center
    justify-content center
    position 0 0 0 0
    height 100%
    margin 0
    background-image url(./pics/fondo.jpg)
    background-repeat no-repeat
    background-size auto
    background-position center
    .section
        display flex
        justify-content space-around
        align-items center
        flex-wrap wrap 
        height 100%
        &-vida
            articlemix(#00FF00)
            imgmix("./pics/Elemento-vida.png")
        &-luz
            articlemix(#C0C0C0)
            imgmix("./pics/Elemento-luz.png")
        &-viento
            articlemix(#8000FF)
            imgmix("./pics/Elemento-viento.png")
        &-agua
            articlemix(#0000FF)
            imgmix("./pics/Elemento-agua.png")
        &-rayo
            articlemix(#FFFF00)
            imgmix("./pics/Elemento-rayo.png")
        &-oscuridad
            articlemix(#202020)
            imgmix("./pics/Elemento-oscuridad.png")
        &-tierra
            articlemix(#FF8000)
            imgmix("./pics/Elemento-tierra.png")
        &-fuego
            articlemix(#FF0000)
            imgmix("./pics/Elemento-fuego.png")
    

